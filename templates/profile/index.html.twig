{% extends 'components/body.html.twig' %}

{% set page_importmap = ['app', 'phone-mask'] %}

{% set items = [
    { label: 'Home', url: path('app_home') },
    { label: 'Perfil' }
] %}

{% block content %}
  <h1 class="text-2xl font-bold mb-4">Perfil</h1>

  {{ form_start(form) }}
      {{ form_row(form.name) }}
      {{ form_row(form.nickname) }}
      {{ form_row(form.email) }}
    {{ form_row(form.phone, { attr: { class: 'phone-mask' } }) }}

      <button type="submit" class="mt-4 cursor-pointer px-4 py-2 bg-blue-600 text-white rounded">Salvar</button>
  {{ form_end(form) }}
{% endblock %}
