{% extends 'base.html.twig' %}

{% block body %}
	{% include 'components/sidebar.html.twig' %}

	<div class="p-4 sm:ml-64">
		<div class="p-4 border-2 border-gray-200 rounded-lg dark:border-gray-700 mt-14 bg-gray-50 dark:bg-gray-800">

			{% if items is defined %}
				{% include 'components/breadcrumb.html.twig' with { items: items } %}
			{% endif %}

			{# read and display all flash messages #}
			{% for label, messages in app.flashes %}
				{% for message in messages %}
					{% include 'components/alert.html.twig' with { type: label, message: message } %}
				{% endfor %}
			{% endfor %}

			<div class="mt-4">
				{% block content %}{% endblock %}
			</div>
		</div>
	</div>
{% endblock %}
